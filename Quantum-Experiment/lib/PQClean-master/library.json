{
  "name": "PQClean",
  "version": "1.0.0",
  "description": "PQClean-based library with ML-DSA-44 and ML-KEM-512",
  "build": {
    "flags": [
      "-I common",
      "-I crypto_sign/ml-dsa-44/clean",
      "-I crypto_kem/ml-kem-512/clean"
    ],
    "srcFilter": [
      "+<common/*.c>",
      "-<common/randombytes.c>",
      "+<crypto_sign/ml-dsa-44/clean/*.c>",
      "+<crypto_kem/ml-kem-512/clean/*.c>"
    ],
    "libArchive": false
  }
}
